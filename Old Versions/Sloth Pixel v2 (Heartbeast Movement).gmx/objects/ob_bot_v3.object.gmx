     if !(place_meeting(x+hspd, y, par_slope)) &amp;&amp; ground
    {
        vspd = -jump;
        hspd = 0;
    }
}

// If target is next to bot, but above it, then jump
if targetseen &amp;&amp; (targety &lt; y - jumpy)
{
    if (targetx &lt; x+jumpx) &amp;&amp; (targetx &gt; x - jumpx) &amp;&amp; ground
    {
        vspd = -jump;
        hspd = 0;
    }
}

hspd_final = hspd;


// Animate
if hspd != 0
{
    if hspd &gt; 0
    {
        dir = 1;
