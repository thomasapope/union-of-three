/// keyboard_check_digit()
// Returns true if a digit is pressed

if (keyboard_key == vk_numpad0 || 
                    vk_numpad1 || 
                    vk_numpad2 || 
                    vk_numpad3 || 
                    vk_numpad4 || 
                    vk_numpad5 || 
                    vk_numpad6 || 
                    vk_numpad7 || 
                    vk_numpad8 || 
                    vk_numpad9) {
    return true;
} else {
    return false;
}
